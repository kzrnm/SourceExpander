<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>

		<RootNamespace>SourceExpander</RootNamespace>

		<GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>
		<PackageId>SourceExpander.Console</PackageId>
		<Description>SourceExpander.Console creates expanded source code.</Description>

		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackAsTool>true</PackAsTool>
		<ToolCommandName>dotnet-source-expand</ToolCommandName>
	</PropertyGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="SourceExpander.Console.Test, " />
		<Using Include="SourceExpander" />

		<Compile Include="../SourceExpander.Share/**/EmbeddedData.cs" LinkBase="Share" />
		<Compile Include="../SourceExpander.Share/**/SourceFileInfo.cs" LinkBase="Share" />
		<Compile Include="../SourceExpander.Share/**/SourceFileContainer.cs" LinkBase="Share" />
		<Compile Include="../SourceExpander.Share/**/IContextWrappter.cs" LinkBase="Share" />
		<Compile Include="../SourceExpander.Share/**/TypeFindAndUnusedUsingRemover.cs" LinkBase="Share" />
		<Compile Include="../SourceExpander.Share/**/Util/*.cs" LinkBase="Share" Exclude="../SourceExpander.Share/**/JsonUtil.cs" />
		<Compile Include="../SourceExpander.Generator/*.cs" LinkBase="SourceExpander.Generator" Exclude="../SourceExpander.Generator/**/*.Converter.cs;../SourceExpander.Generator/**/ExpandGenerator*.cs;../SourceExpander.Generator/EmbeddedLoaderWithDiagnostic.cs;../SourceExpander.Generator/EmbeddingCore.cs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Base32768" Version="2.0.2" />
		<PackageReference Include="ConsoleAppFramework" Version="4.0.5" />
		<PackageReference Include="Microsoft.Build.Locator" Version="1.4.1" />
		<PackageReference Include="Microsoft.Build" Version="17.0.0" ExcludeAssets="runtime" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.0.1" />
		<PackageReference Include="Microsoft.CodeAnalysis.Workspaces.MSBuild" Version="4.0.1" />
	</ItemGroup>
</Project>
